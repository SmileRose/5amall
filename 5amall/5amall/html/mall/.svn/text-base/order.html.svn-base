					</li>
				</ul>
			</div>
		</div>
		<script src="../../js/mui.min.js"></script>
		<script src="../../js/app.js"></script>
		<script src="../../js/config.js"></script>
		<script src="../../js/common.js"></script>
		<script src="../../js/template-native.js"></script>
		<script src="../../js/jquery-1.11.0.js" ></script>
		<script>
			$('.show-all-price').each(function() {
				var sum = 0;
				$('[price]').each(function() {
					sum += $(this).text() * $(this).parent().find('[count]').text();
				});
				var allEle = $('.all-price-ele');
				var min = (allEle.attr('min') - 0) || 0;
				if (sum < min) sum += $(this).next().find('[freight]').text() - 0;
				allEle.text(sum.toFixed(2));
			});
		</script>
	</body>

</html>